#!/usr/bin/python3

def prime_factors(n):
    factors = []
    # Handle the case of small prime numbers
    while n % 2 == 0:
        factors.append(2)
        n = n // 2

# Try dividing n by all odd numbers starting from 3
        for i in range(3, int(n**0.5) + 1, 2):
            while n % i == 0:
                factors.append(i)
                n = n // i

# If n is still greater than 1, it must be a prime number itself
                if n > 1:
                    factors.append(n)

                    return factors

# Example usage:
                number_to_factor = 56
                factors = prime_factors(number_to_factor)
                print("Prime factors of", number_to_factor, "are:", factors)
